<table class='table table-hover table-bordered'>
  <tr class="active"><th>No.</th><th>Name</th><th>Operation</th></tr>
  <% @students.each do |student| %>
    <tr>
      <td>
        <h4><%= student.id %></h4>
      </td>
      <td>
        <h4><%= student.name %></h4>
      </td>
      <td>
        <%= link_to 'INFO', student_path(student), :class=>"btn btn-info" %>
        <%= link_to 'EDIT', edit_student_path(student), :class=>"btn btn-warning" %>
        <%= link_to 'DELETE', student_path(student), :method => :delete, :class=>"btn btn-danger" %> 
      </td>
    </tr>
  <% end %>
</table>
<h3><%= paginate @students %></h3>
<h2>Add Student</h2>
<%= form_for @student, :url => students_path do |s| %>
  <%= render :partial => 'form', :locals => {:s => s} %>
  <%= s.submit "Create", :class => 'btn btn-default' %>
<% end %>
