<div><%= link_to 'New Student', new_student_path, :class=>"btn btn-default" %></div>

<br>
<br>

<table class='table table-hover table-bordered'>
  <tr><th>No.</th><th>Name</th><th>Operation</th></tr>
  <% @students.each do |student| %>
    <tr>
      <td>
        <h4><%= student.id %></h4>
      </td>
      <td>
        <h4><%= student.name %></h4>
      </td>
      <td>
        <%= link_to 'INFO', student_path(student), :class=>"btn btn-info" %>
        <%= link_to 'EDIT', edit_student_path(student), :class=>"btn btn-warning" %>
        <%= link_to 'DELETE', student_path(student), :method => :delete, :class=>"btn btn-danger" %> 
      </td>
    </tr>
  <% end %>
</table>
<h3><%= paginate @students %></h3>




